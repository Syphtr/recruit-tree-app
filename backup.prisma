model User {
  id               String           @id @default(uuid())
  age              Int
  name             String
  email            String           @unique
  role             Role             @default(BASIC)
  createdPosts     Post[]           @relation("Authored")
  favoritePosts    Post[]           @relation("Favorited")
  userPreferences  UserPreferences? @relation(fields: [userPreferenceId], references: [id])
  userPreferenceId String?          @unique

  @@unique([age, name])
  @@index([email])
}

model UserPreferences {
  id           String  @id @default(uuid())
  emailUpdates Boolean
  user         User?
}

model Post {
  id            String     @id @default(uuid())
  title         String
  averageRating Float
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  author        User       @relation("Authored", fields: [authorId], references: [id])
  authorId      String
  favoritedBy   User?      @relation("Favorited", fields: [favoritedById], references: [id])
  favoritedById String?
  categories    Category[]
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  posts Post[]
}

enum Role {
  BASIC
  ADMIN
}
